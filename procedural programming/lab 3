Task 5 - Implement swap function Swap(int &a, int &b) that swaps given integers

#include <iostream>
using namespace std;

void Swap(int &a, int &b) {
    int temp = a;
    a = b;
    b = temp;
}

int main() {
    int num1, num2;
    cin >> num1;
    cin >> num2;
    
    Swap(num1, num2);
    
    cout << num1 << " " << num2;

    return 0;
}
